                Grid.Row="0"
                Grid.Column="3"
                Background="Black" />
            <Border
                Grid.Row="4"
                Grid.Column="1"
                Background="Black" />
            <Border
                Grid.Row="4"
                Grid.Column="3"
                Background="Black" />
            <Border
                Grid.Row="1"
                Grid.Column="0"
                Background="Black" />
            <Border
                Grid.Row="3"
                Grid.Column="0"
                Background="Black" />
            <Border
                Grid.Row="1"
                Grid.Column="4"
                Background="Black" />
            <Border
                Grid.Row="3"
                Grid.Column="4"
                Background="Black" />
        </Grid>
        <Border
            Grid.Row="1"
            Margin="0,3,0,0"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="2">
            <Grid Background="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="28" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="button_close"
                        Grid.Column="0"
                        Width="28"
                        Height="28"
                        Padding="2"
                        HorizontalAlignment="Right"
                        hc:BorderElement.CornerRadius="0"
                        BorderThickness="0"
                        Click="button_close_Click">
                        <Button.Content>
                            <Path Stretch="Uniform">
